        <script type='text/javascript'>
            function loadMapScenario() {
                var map = new Microsoft.Maps.Map(document.getElementById('map'), {
                    center: new Microsoft.Maps.Location(37.791261, -122.401478) });
                var center = map.getCenter();
                var infobox = new Microsoft.Maps.Infobox(center, { title: 'Our Office',
                    description: '250 Bush St, San Francisco, CA 94104' });
                    map.setOptions({
                        maxZoom: 20,
                        minZoom: 14
                        });
                infobox.setMap(map);
            }
        </script>
         <script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=At7-9tRWGXGM6Bjn6QrQB7slepzLuMPMb3hnoampu99dqTk61ygAGCmbZKIv1dZT&callback=loadMapScenario' async defer></script>
